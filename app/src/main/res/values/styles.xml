<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
    <item name="colorPrimary">@color/color</item>
    <item name="colorPrimaryDark">@color/colorDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColor">@color/colorDefaultInverse</item>
    <item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorDark</item>
  </style>

  <style name="RavenclawTheme" parent="AppTheme">
    <item name="colorPrimary">@color/colorRavenclaw</item>
    <item name="colorPrimaryDark">@color/colorRavenclawDark</item>
    <item name="colorAccent">@color/colorRavenclawAccent</item>
    <item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorRavenclawDark
    </item>
  </style>

  <style name="GryffindorTheme" parent="AppTheme">
    <item name="colorPrimary">@color/colorGryffindor</item>
    <item name="colorPrimaryDark">@color/colorGryffindorDark</item>
    <item name="colorAccent">@color/colorGryffindorAccent</item>
    <item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorGryffindorDark
    </item>
  </style>

  <style name="SlytherinTheme" parent="AppTheme">
    <item name="colorPrimary">@color/colorSlytherin</item>
    <item name="colorPrimaryDark">@color/colorSlytherinDark</item>
    <item name="colorAccent">@color/colorSlytherinAccent</item>
    <item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorSlytherinDark
    </item>
  </style>

  <style name="HufflepuffTheme" parent="AppTheme">
    <item name="colorPrimary">@color/colorHufflepuff</item>
    <item name="colorPrimaryDark">@color/colorHufflepuffDark</item>
    <item name="colorAccent">@color/colorHufflepuffAccent</item>
    <item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorHufflepuffDark
    </item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.Material3.Light"/>

  <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
    <item name="cornerSize">50%</item>
  </style>

  <style name="Widget.App.ShapeableImageView" parent="Widget.MaterialComponents.ShapeableImageView">
    <item name="shapeAppearance">?attr/shapeAppearanceSmallComponent</item>
    <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CornerSize50Percent</item>
  </style>

  <style name="App.Widget.Toolbar" parent="Widget.Material3.Toolbar">
    <item name="android:background">?attr/colorTertiaryContainer</item>
    <item name="titleTextColor">?attr/colorOnTertiaryContainer</item>
    <item name="subtitleTextColor">?attr/colorOnTertiaryContainer</item>
    <item name="navigationIconTint">?attr/colorOnTertiaryContainer</item>
  </style>

  <style name="App.Widget.MenuItem" parent="Widget.Material3.Button.UnelevatedButton">
    <item name="android:layout_width">96dp</item>
    <item name="android:layout_height">96dp</item>
    <item name="android:layout_marginStart">8dp</item>
    <item name="android:layout_marginEnd">8dp</item>
    <item name="android:maxLines">1</item>
    <item name="android:padding">0dp</item>
    <item name="backgroundTint">?attr/colorSecondaryContainer</item>
    <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
    <item name="iconTint">?attr/colorOnSecondaryContainer</item>
    <item name="cornerRadius">8dp</item>
    <item name="iconGravity">textTop</item>
    <item name="textAllCaps">false</item>
    <item name="android:layout_columnSpan">1</item>
    <item name="android:layout_columnWeight">1</item>
  </style>

  <style name="App.Widget.MenuItem.HorizontalScrolling" parent="App.Widget.MenuItem">
    <item name="android:layout_width">112dp</item>
    <item name="android:layout_height">96dp</item>
    <item name="android:layout_marginStart">0dp</item>
    <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
    <item name="iconTint">@null</item>
    <item name="iconSize">32dp</item>
  </style>

</resources>